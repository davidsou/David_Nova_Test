@model IEnumerable<NovaTest.Domain.Entities.Client>

@{
    ViewBag.Title = "Client Management";
}
<div id="divexcluir"></div>
<div>

    <div class="alert alert-success">@TempData["mensagem"]</div>


</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Clients</h3>
    </div>
    <div class="panel-body">

        @Html.ActionLink("Add New Client", "NewClient", "Client", new { @class = "btn btn-default" })
        <p/>

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th class="text-right">Birthday</th>
                    <th class="text-center">Category</th>
                    <th class="text-center">House Number</th>
                    <th class="text-center">Street</th>
                    <th class="text-center">State</th>
                    <th class="text-center">Country</th>
                    <th class="text-center">Delete</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.idClient">

                        <td class="text-right">
                            @item.idClient
                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new { item.idClient })
                        </td>
                        <td class="text-right">
                            @item.Gender
                        </td>
                        <td class="text-right">
                            @item.Birthday.ToString("MM/dd/yyyy")
                        </td>
                        <td class="text-right">
                            @item.Category
                        </td>
                        <td class="text-right">
                            @item.Number
                        </td>
                        <td class="text-right">
                            @item.Address 
                        </td>
                        <td class="text-right">
                            @item.State
                        </td>
                        <td class="text-right">
                            @item.Country
                        </td>
                        <td class="text-right">
                            @*<input type="submit" class="btn btn-default btn-xs" id="@item.idClient" name="@item.Name" value="Delete" />*@
                            @using (Html.BeginForm("Delete", "Client"))
                            {
                                @Html.Hidden("idClient", item.idClient)
                                <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                            }

                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
